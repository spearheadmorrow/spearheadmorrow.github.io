source 'https://rubygems.org'

# Use a modern Jekyll for local preview and the remote theme plugin.
# Omit `github-pages` here to avoid dependency pin conflicts. GitHub will
# still build the site with its Pages environment when deployed.
gem 'jekyll', '~> 4.2'
gem 'webrick', '~> 1.7' # needed by Ruby 3+ for `jekyll serve`
gem 'jekyll-remote-theme'
